<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etsellerironprice"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/etsellerstock"
        android:layout_alignBottom="@+id/etsellerironstock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-39dp"
        android:background="@drawable/input_design"
        android:hint="Price\Kg"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@android:color/tertiary_text_light"
        android:textColorHint="@android:color/tertiary_text_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <ImageView
        android:id="@+id/etimageView"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="246dp"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/textView_name"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="169dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/etsellerironstock"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/input_design"
        android:hint="Stock Quantity"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="@android:color/tertiary_text_light"
        android:textColorHint="@android:color/tertiary_text_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <Button
        android:id="@+id/ironaddtocart"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/etsellerironprice"
        android:layout_alignBottom="@+id/etimageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="198dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_button"
        android:text="Add" />

</RelativeLayout>