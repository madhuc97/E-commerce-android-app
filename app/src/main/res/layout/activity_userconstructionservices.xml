<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstructionservicesActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="213dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/k3img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="CONSTRUCTION SERVICES"
                        android:textColor="#959598"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="215dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:layout_width="204dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/contructor"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginLeft="200dp"
                                    android:layout_marginEnd="30dp"
                                    app:srcCompat="@drawable/constructer" />

                                <ImageView
                                    android:id="@+id/carpentor"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="220dp"
                                    app:srcCompat="@drawable/carpenter" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="246dp"
                            android:layout_marginEnd="58dp"
                            android:text="Constructor"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="55dp"
                            android:layout_marginEnd="255dp"
                            android:text="Carpentor"
                            android:textAlignment="center"
                            android:textColor="#000000" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="204dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/sellerlectricals"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="220dp"
                                    app:srcCompat="@drawable/electrition" />

                                <ImageView
                                    android:id="@+id/paint"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"

                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginLeft="200dp"
                                    android:layout_marginEnd="30dp"
                                    app:srcCompat="@drawable/painter" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="246dp"
                            android:layout_marginEnd="58dp"
                            android:text="Painter"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="55dp"
                            android:layout_marginEnd="255dp"
                            android:text="Electrition"
                            android:textAlignment="center"
                            android:textColor="#000000" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="204dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/hardware"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="220dp"
                                    app:srcCompat="@drawable/plumber" />

                                <ImageView
                                    android:id="@+id/electricals"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentStart="true"

                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginLeft="200dp"
                                    android:layout_marginEnd="30dp"
                                    app:srcCompat="@drawable/labor" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="245dp"
                            android:layout_marginEnd="59dp"
                            android:text="Labours"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="55dp"
                            android:layout_marginEnd="255dp"
                            android:text="Plumber"
                            android:textAlignment="center"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>